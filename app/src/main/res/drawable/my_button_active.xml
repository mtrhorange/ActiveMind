<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#DEE2E6" />
            <gradient android:angle="-90" android:startColor="#E9ECEF" android:endColor="#CED4DA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#495057" />
            <solid android:color="#6C757D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#495057" />
            <gradient android:angle="-90" android:startColor="#6C757D" android:endColor="#343A40" />
        </shape>
    </item>
</selector>
